---
layout: base.njk
---

<article class="p-8 md:px-20 pt-16 pb-16 gap-6">
  <header class="pb-8 border-b border-[#C0C0C0]">
    <h1 class="text-[28px] font-manrope font-semibold">{{ title }}</h1>
    <p class="text-black font-baskerville text-base leading-7">{{ description }}</p>
  </header>

  <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  {% for item in items %}
  <div class="border p-4">
    {% if item.type == "link" %}
      <a href="{{ item.content }}" target="_blank" rel="noopener noreferrer">
        <img 
          src="{{ linkPreviewImage[loop.index0] }}" 
          alt="Preview for {{ item.content }}" 
          class="w-full h-40 object-cover rounded"
        />
      </a>
    {% elseif item.type == "image" %}
      <img src="{{ item.content }}" alt="Collection item image" class="w-full h-40 object-cover rounded" />
    {% elseif item.type == "snippet" %}
      <blockquote>{{ item.content }}</blockquote>
    {% endif %}
  </div>
  {% endfor %}
</section>
</article>
