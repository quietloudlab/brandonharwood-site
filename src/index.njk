---
layout: base.njk
title: Brandon Harwood's Personal Website
---

<main class="container mx-auto px-4">
  {# Hero Section #}
  <section class="py-16 md:py-24">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-6">Brandon Harwood</h1>
      <p class="text-xl md:text-2xl text-gray-600 mb-8">Full-Stack Developer & Design Technologist</p>
      <div class="flex justify-center gap-4">
        <a 
          href="/about" 
          class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
          aria-label="Learn more about Brandon"
        >
          About Me
        </a>
        <a 
          href="/contact" 
          class="inline-flex items-center px-6 py-3 border-2 border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors"
          aria-label="Get in touch with Brandon"
        >
          Get in Touch
        </a>
      </div>
    </div>
  </section>

  {# Recent Blog Posts Section #}
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold">Recent Blog Posts</h2>
        <a 
          href="/blog" 
          class="text-blue-600 hover:text-blue-800 transition-colors"
          aria-label="View all blog posts"
        >
          View all posts →
        </a>
      </div>
      
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {%- for post in collections.posts | reverse -%}
          {% if loop.index0 < 3 %}
            <article class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <a href="{{ post.url }}" class="group" aria-label="Read {{ post.data.title }}">
                {% if post.data.image %}
                  <div class="aspect-w-16 aspect-h-9">
                    {% image "src/content/posts/" + post.fileSlug + "/" + post.data.image, 
                      post.data.title, 
                      "lazy", 
                      "w-full h-48 object-cover group-hover:opacity-90 transition-opacity" 
                    %}
                  </div>
                {% endif %}
                
                <div class="p-4">
                  <h3 class="text-xl font-bold mb-2 group-hover:text-blue-600 transition-colors">{{ post.data.title }}</h3>
                  
                  <time datetime="{{ post.date | dateIso }}" class="text-sm text-gray-600 mb-3 block">
                    {{ post.date | dateReadable }}
                  </time>
                  
                  <div class="text-gray-700 mb-4">
                    {% set firstParagraph = post.templateContent | split("<p>") %}
                    {% if firstParagraph[1] %}
                      {% set preview = firstParagraph[1] | split("</p>") | first | striptags | truncate(150) %}
                      {{ preview }}
                    {% endif %}
                  </div>
                  
                  <span class="text-blue-600 group-hover:text-blue-800 transition-colors">Read more →</span>
                </div>
              </a>

              {% if post.data.tags %}
                <div class="px-4 pb-4 mt-auto">
                  <div class="flex flex-wrap gap-2">
                    {%- for tag in post.data.tags -%}
                      {%- if tag not in ["all", "nav", "post", "posts"] -%}
                        <a 
                          href="/tags/{{ tag }}/" 
                          class="text-xs bg-gray-200 rounded-full px-2 py-1 text-gray-700 hover:bg-gray-300 transition-colors"
                          aria-label="View posts tagged {{ tag }}"
                        >{{ tag }}</a>
                      {%- endif -%}
                    {%- endfor -%}
                  </div>
                </div>
              {% endif %}
            </article>
          {% endif %}
        {%- endfor -%}
      </div>
    </div>
  </section>
</main>
